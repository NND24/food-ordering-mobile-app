<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topping_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@drawable/custom_check_box_button"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/side_dish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cơm thêm"
                    android:textColor="@color/onSecondary"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/onSecondary"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/side_dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.000"
                    android:textColor="@color/onSecondary"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textColor="@color/onSecondary"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/primaryBorderColor" />
</LinearLayout>
