<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            app:srcCompat="@drawable/ic_close_24"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryColor"
            android:hint="Thêm lưu ý cho quán"
            android:textSize="24dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryBorderColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryColor"
        android:hint="Không bắt buộc"
        android:textSize="16dp"
        android:paddingTop="15dp"
        android:paddingHorizontal="15dp"/>

    <EditText
        android:id="@+id/edtNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/onPrimary"
        android:textColorHint="@color/tertiaryColor"
        android:textSize="16dp"
        android:background="@null"
        android:padding="15dp"
        android:hint="Việc thực hiện yêu cầu còn tùy thuộc vào khả năng của quán" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        android:textColor="@color/whiteColor"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/custom_button_normal"
        android:layout_margin="15dp"/>
</LinearLayout>
