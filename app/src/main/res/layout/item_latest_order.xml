<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/primaryLightColor"
        android:padding="8dp">

        <TextView
            android:id="@+id/order_number"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_order_number"
            android:gravity="center"
            android:text="02"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="194dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Anh Bui Vu Tuan"
            android:textColor="@color/secondaryColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/order_number"
            app:layout_constraintTop_toTopOf="@id/order_number" />

        <TextView
            android:id="@+id/order_summary"
            android:layout_width="310dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="2 Món / 75,000₫"
            android:textColor="@color/secondaryColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/order_number"
            app:layout_constraintTop_toBottomOf="@id/customer_name" />

        <TextView
            android:id="@+id/order_items"
            android:layout_width="309dp"
            android:layout_height="35dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="12dp"
            android:text="1x Trà Cây Thập Cẩm\n1x Đùi gà rán"
            android:textColor="@color/secondaryColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_summary" />

        <TextView
            android:id="@+id/pickup_time"
            android:layout_width="147dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:text="Lấy đơn trong 24 phút"
            android:textColor="@color/secondaryColor"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_items" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="93dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="19:00"
            android:textAlignment="viewEnd"
            android:textColor="@color/secondaryColor"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_view_more"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/secondaryColor"
            android:text="Xem thêm"
            android:textColor="@color/whiteColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_confirm"
            app:layout_constraintTop_toBottomOf="@id/order_items"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Xác nhận"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_items"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>