<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi được chọn -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Màu nền -->
            <stroke android:width="2dp" android:color="#FF4081"/> <!-- Viền màu hồng -->
            <corners android:radius="6dp"/> <!-- Border radius -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Khi không được chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="2dp" android:color="#7a7a7a"/> <!-- Viền mặc định -->
            <corners android:radius="6dp"/>
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>

</selector>
