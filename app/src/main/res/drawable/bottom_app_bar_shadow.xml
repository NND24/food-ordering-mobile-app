<!-- bottom_app_bar_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border trên BottomAppBar -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền -->
            <size android:height="2dp" /> <!-- Chiều cao border -->
            <corners android:radius="0dp" /> <!-- Không bo tròn các góc -->
        </shape>
    </item>
    <!-- Body của BottomAppBar -->
    <item android:left="0dp" android:right="0dp" android:top="2dp" android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#6200EE" /> <!-- Màu nền của BottomAppBar -->
            <corners android:radius="30dp" /> <!-- Bo tròn các góc của BottomAppBar -->
        </shape>
    </item>
</layer-list>
