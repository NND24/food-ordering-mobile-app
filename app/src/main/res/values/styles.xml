<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="button_style">
        <item name="android:layout_width">247dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_style_state</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="facebook_button_style">
        <item name="android:layout_width">247dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_facebook_style_state</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="google_button_style">
        <item name="android:layout_width">247dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_google_style_state</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="filter_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/custom_button_filter</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="text_view_color_theme_style">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom_input">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textColorHint">@color/tertiaryColor</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="custom_input_password">
        <item name="android:background">@drawable/custom_input_password</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textColorHint">@color/tertiaryColor</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="custom_button_password">
        <item name="android:background">@drawable/custom_button_password</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textColorHint">@color/tertiaryColor</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="RoundedCornerImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/dess_1</item>
        <item name="android:background">@drawable/rounded_corners</item> <!-- Thêm drawable bo tròn cho ảnh -->
    </style>

</resources>